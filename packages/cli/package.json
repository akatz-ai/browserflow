{
  "name": "@browserflow-ai/cli",
  "version": "0.0.7",
  "description": "bf command-line tool for BrowserFlow - Human-in-the-Loop E2E Test Generation",
  "type": "module",
  "bin": {
    "bf": "./bin/bf.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./dist/commands/explore.js": {
      "import": "./dist/commands/explore.js",
      "types": "./dist/commands/explore.d.ts"
    },
    "./dist/commands/review.js": {
      "import": "./dist/commands/review.js",
      "types": "./dist/commands/review.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "dev": "bun run src/index.ts"
  },
  "files": ["dist", "bin"],
  "keywords": ["browserflow", "e2e", "testing", "playwright", "ai", "automation"],
  "repository": {
    "type": "git",
    "url": "https://github.com/akatz-ai/browserflow.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/akatz-ai/browserflow/issues"
  },
  "homepage": "https://github.com/akatz-ai/browserflow#readme",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@browserflow-ai/core": "workspace:*",
    "@browserflow-ai/exploration": "workspace:*",
    "@browserflow-ai/generator": "workspace:*",
    "@browserflow-ai/review-ui": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "bun-types": "^1.1.0"
  }
}
