{
  "name": "@browserflow/cli",
  "version": "0.0.1",
  "description": "bf command-line tool for BrowserFlow",
  "type": "module",
  "bin": {
    "bf": "./bin/bf.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "dev": "bun run src/index.ts"
  },
  "files": ["dist", "bin", "src"],
  "dependencies": {
    "@browserflow/core": "workspace:*",
    "@browserflow/exploration": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "bun-types": "^1.1.0"
  }
}
