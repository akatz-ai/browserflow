{
  "name": "browserflow",
  "version": "0.0.1",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "dev": "bun run --filter @browserflow-ai/cli dev",
    "publish:dry": "bun run scripts/publish.ts --dry-run",
    "publish:all": "bun run scripts/publish.ts"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  }
}
