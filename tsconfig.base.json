{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@akatz-ai/core": ["packages/core/src/index.ts"],
      "@akatz-ai/cli": ["packages/cli/src/index.ts"],
      "@akatz-ai/exploration": ["packages/exploration/src/index.ts"],
      "@akatz-ai/generator": ["packages/generator/src/index.ts"],
      "@akatz-ai/review-ui": ["packages/review-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
